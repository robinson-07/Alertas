<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"

    android:focusableInTouchMode="false"
    android:orientation="horizontal"
    android:padding="5dip">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp">

        <ImageButton
            android:id="@+id/plantilla_list_estado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="3"
            android:background="@null"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="visible"
            app:srcCompat="@drawable/alerta_activa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/plantilla_lista_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/actor"
                        android:gravity="left"
                        android:singleLine="true"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/plantilla_lista_repetir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/repetir_off" />

                        <ImageView
                            android:id="@+id/plantilla_lista_notificacion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            app:srcCompat="@drawable/notificacion_off" />

                        <TextView
                            android:id="@+id/plantilla_lista_timbres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@android:color/background_dark"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="2dp"
                            app:srcCompat="@drawable/timbre" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plantilla_lista_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/plantilla_list_estado"
                    android:layout_toRightOf="@+id/plantilla_list_estado"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:text="12:34 PM"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/plantilla_lista_do"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/plantilla_lista_time"
                        android:layout_toRightOf="@+id/plantilla_lista_time"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="D"
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/plantilla_lista_lu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/plantilla_lista_do"
                        android:layout_toRightOf="@+id/plantilla_lista_do"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="L"
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/plantilla_lista_ma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/plantilla_lista_lu"
                        android:layout_toRightOf="@+id/plantilla_lista_lu"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/plantilla_lista_mi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/plantilla_lista_ma"
                        android:layout_toRightOf="@+id/plantilla_lista_ma"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/plantilla_lista_ju"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/plantilla_lista_mi"
                        android:layout_toRightOf="@+id/plantilla_lista_mi"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="J"
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/plantilla_lista_vi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/plantilla_lista_ju"
                        android:layout_toRightOf="@+id/plantilla_lista_ju"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="V"
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/plantilla_lista_sa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/plantilla_lista_vi"
                        android:layout_toRightOf="@+id/plantilla_lista_vi"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@android:color/background_dark" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/plantilla_list_eliminar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="3"
            android:background="@null"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:srcCompat="@drawable/delete" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>